@model Emprestimo_Livros.Models.EmprestimoModel

@if (ViewBag.sucesso != null)
{
    <h2 class="@(ViewBag.sucesso ? "text-success" : "text-danger")">@ViewBag.mensagem</h2>
}

<div class="container py-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Registro de Empréstimo de Livros</h4>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Registrar">
                <div class="row g-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Campo para RecebedorNome -->
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label">Nome do Recebedor</label>
                            <input type="text"
                                   asp-for="RecebedorNome"
                                   class="form-control"
                                   placeholder="Digite o nome de quem está recebendo o livro">
                            <span class="text-danger" asp-validation-for="RecebedorNome"></span>
                        </div>
                    </div>

                    <!-- Campo para LivroEmprestadoNome -->
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label">Nome do Livro</label>
                            <input type="text"
                                   asp-for="LivroEmprestadoNome"
                                   class="form-control"
                                   placeholder="Digite o nome do livro">
                            <span class="text-danger" asp-validation-for="LivroEmprestadoNome"></span>
                        </div>
                    </div>

                    <!-- Campo para FornecedorNome -->
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label">Nome do Fornecedor</label>
                            <input type="text"
                                   asp-for="FornecedorNome"
                                   class="form-control"
                                   placeholder="Digite o nome de quem está emprestando o livro">
                            <span class="text-danger" asp-validation-for="FornecedorNome"></span>
                        </div>
                    </div>

                    <!-- Campo para DataEmprestimoLivro (Somente leitura) -->
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label">Data do Empréstimo</label>
                            <input type="text"
                                   asp-for="DataEmprestimoLivro"
                                   class="form-control"
                                   readonly>
                            <span class="text-danger" asp-validation-for="DataEmprestimoLivro"></span>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <button type="submit" class="btn btn-primary">Registrar Empréstimo</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
